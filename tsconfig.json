{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "$/*": ["src/*"] },
    "allowJs": true,
    "checkJs": true,
    "strictNullChecks": true,
    "declaration": true,
    "plugins": [{ "name": "@astrojs/ts-plugin" }]
  },
  "include": ["**/*", ".*"],
  "exclude": ["public/pagefind", "node_modules", "dist", ".astro"]
}
