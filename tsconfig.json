{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "baseUrl": ".",
    "strictNullChecks": true,
    "allowJs": true,
    "declaration": true,
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["**/*", ".*"],
  "exclude": ["public/pagefind", "node_modules", "dist", ".astro"]
}
