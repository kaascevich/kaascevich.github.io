---
import siteConfig from '$/config/site'
import strings from '$/config/strings'
const currentYear = new Date().getFullYear()
---

<hr />
<footer>
  <div class="footer-content">
    {strings.license.copyright(currentYear, siteConfig.profile.name)}

    <br />

    <a target="_blank" href="/rss.xml">RSS</a>
    /
    <a target="_blank" href="/sitemap-index.xml">Sitemap</a>
    /
    <a
      target="_blank"
      href="https://github.com/kaascevich/kaascevich.github.io"
    >
      Source
    </a>

    <br />

    Powered by
    <a target="_blank" href="https://astro.build">Astro</a>
    &
    <a target="_blank" href="https://github.com/saicaca/fuwari">Fuwari</a>
  </div>
</footer>

<style lang="scss">
  @use '$/styles/main';
  @use '$/styles/theme' as *;
  @use '$/styles/utils' as *;
  @use '$/styles/variants';

  hr {
    margin-block: spacing(10);
    margin-inline: spacing(16);

    border-block-start: 1px dashed light-dark(black(10%), white(15%));
  }

  footer {
    display: block flex;

    flex-direction: column;

    align-items: center;
    justify-content: center;

    margin-block-end: spacing(12);

    border-radius: $radius-xl2;

    padding-block-end: spacing(6);
    padding-inline: spacing(6);

    .footer-content {
      @include font-size($text-sm);

      text-align: center;

      color: bw(50%);

      a {
        @extend %link;

        color: var(--primary);

        font-weight: $font-weight-medium;
      }
    }
  }
</style>
