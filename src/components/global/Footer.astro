---
import siteConfig from '$/config/site'
import strings from '$/config/strings'
import { url } from '$/utils/urls'
const currentYear = new Date().getFullYear()
---

<hr />
<footer>
  <div class="footer-content">
    {strings.license.copyright(currentYear, siteConfig.profile.name)}

    <br />

    <a target="_blank" href={url('rss.xml')}>RSS</a>
    /
    <a target="_blank" href={url('sitemap-index.xml')}>Sitemap</a>
    /
    <a
      target="_blank"
      href="https://github.com/kaascevich/kaascevich.github.io"
    >
      Source
    </a>

    <br />

    Powered by
    <a target="_blank" href="https://astro.build">Astro</a>
    &
    <a target="_blank" href="https://github.com/saicaca/fuwari">Fuwari</a>
  </div>
</footer>

<style lang="scss">
  @use '$/styles/main';
  @use '$/styles/theme' as *;
  @use '$/styles/utils' as *;
  @use '$/styles/variants';

  hr {
    @include transition();
    margin: spacing(10) spacing(16);

    border: {
      top-width: 1px;
      style: dashed;
      color: black(10%);
    }
    @include variants.dark {
      border-color: white(15%);
    }
  }

  footer {
    @include transition();
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-bottom: spacing(12);
    border-radius: $radius-xl2;
    padding: {
      right: spacing(6);
      bottom: spacing(6);
      left: spacing(6);
    }

    .footer-content {
      @include text-plain(50%);
      @include font-size($text-sm);
      text-align: center;

      a {
        @extend %link;
        color: var(--primary);
        font-weight: $font-weight-medium;
      }
    }
  }
</style>
