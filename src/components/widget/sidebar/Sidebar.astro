---
import siteConfig from '$/config/site'
import Profile from '$/components/widget/sidebar/profile/Profile.astro'
import Tag from '$/components/widget/sidebar/Tags.astro'
import Categories from '$/components/widget/sidebar/Categories.astro'
---

<aside class="sidebar">
  <section class="profile">
    <Profile config={siteConfig.profile} />
  </section>
  <section class="sticky">
    <Categories class="categories" />
    <Tag class="tags" />
  </section>
</aside>

<style lang="scss">
  @use '$/styles/main';
  @use '$/styles/theme' as *;
  @use '$/styles/transition';
  @use '$/styles/utils' as *;
  @use '$/styles/variants';

  aside.sidebar {
    inline-size: 100%;

    animation-delay: 100ms;
  }

  section.profile {
    display: block flex;

    flex-direction: column;

    gap: spacing(4);

    margin-block-end: spacing(4);

    inline-size: 100%;
  }

  section.sticky {
    @include transition($duration: 700ms);

    display: block flex;
    position: sticky;
    inset-block-start: spacing(4);

    flex-direction: column;

    gap: spacing(4);

    :global(.categories, .tags) {
      @extend %onload-animation;
    }

    :global(.categories) {
      animation-delay: 150ms;
    }

    :global(.tags) {
      animation-delay: 200ms;
    }
  }
</style>
