---
import Avatar from '$/components/widget/sidebar/profile/Avatar.astro'
import ProfileLinks from '$/components/widget/sidebar/profile/ProfileLinks.astro'
import type { ProfileConfig } from '$/types/config'

interface Props {
  config: ProfileConfig
}
const { config } = Astro.props
---

<div class="profile-card">
  <Avatar />

  <div class="info">
    <div class="name">{config.name}</div>
    <hr />
    <div class="bio">{config.bio}</div>
  </div>

  <ProfileLinks links={config.links} />
</div>

<style lang="scss">
  @use '$/styles/main';
  @use '$/styles/theme' as *;
  @use '$/styles/utils' as *;
  @use '$/styles/variants';

  .profile-card {
    @extend %card-base;

    padding: spacing(3);

    .info {
      padding-right: spacing(2);
      padding-left: spacing(2);

      .name {
        @include transition;
        @include font-size($text-xl);

        margin-bottom: spacing(1);

        font-weight: $font-weight-bold;
        text-align: center;

        @include variants.dark {
          color: $color-neutral-50;
        }
      }

      hr {
        @include transition;

        width: spacing(10);
        height: spacing(1);

        margin: spacing(2) auto;

        border-style: none;
        border-radius: 9999px;

        background-color: var(--primary);
      }

      .bio {
        @include transition;

        margin-bottom: spacing(2.5);

        color: $color-neutral-400;
        text-align: center;
      }
    }
  }
</style>
