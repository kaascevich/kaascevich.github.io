---
import Avatar from '$/components/widget/sidebar/profile/Avatar.astro'
import ProfileLinks from '$/components/widget/sidebar/profile/ProfileLinks.astro'
import type { ProfileConfig } from '$/types/config'

interface Props {
  config: ProfileConfig
}
const { config } = Astro.props
---

<div class="profile-card">
  <Avatar />

  <div class="info">
    <div class="name">{config.name}</div>
    <hr />
    <div class="bio">{config.bio}</div>
  </div>

  <ProfileLinks links={config.links} />
</div>

<style lang="scss">
  @use '$/styles/main';
  @use '$/styles/theme' as *;
  @use '$/styles/utils' as *;
  @use '$/styles/variants';

  .profile-card {
    @extend %card-base;

    padding: spacing(3);

    .info {
      padding-inline: spacing(2);

      .name {
        @include transition;
        @include font-size($text-xl);

        @include variants.dark {
          color: gray(98.5%);
        }

        margin-block-end: spacing(1);

        text-align: center;

        font-weight: $font-weight-bold;
      }

      hr {
        @include transition;

        margin-block: spacing(2);
        margin-inline: auto;

        border-style: none;

        border-radius: 9999px;

        background-color: var(--primary);

        block-size: spacing(1);
        inline-size: spacing(10);
      }

      .bio {
        @include transition;

        margin-block-end: spacing(2.5);

        text-align: center;

        color: gray(70.8%);
      }
    }
  }
</style>
