---
import type { Post } from '$/types/content'
import { Icon } from 'astro-icon/components'

interface Props {
  entry: Post
  url: string
}

const { entry, url } = Astro.props
const { title } = entry.data
---

<a
  href={url}
  aria-label={title}
  class=""
>
  <Icon
    size="2.25rem"
    name="tabler:chevron-right"
  />
</a>

<style lang="scss">
  @use '$/styles/main';
  @use '$/styles/theme' as *;
  @use '$/styles/utils' as *;
  @use '$/styles/variants';

  a {
    @extend %btn-regular;

    display: none !important;
    position: absolute;
    inset-block: spacing(3);
    inset-inline-end: spacing(3);

    align-items: center;
    justify-content: center;
    inline-size: spacing(13);

    border-radius: $radius-xl;

    background-color: var(--enter-btn-bg);

    @include variants.md {
      display: flex !important;
    }

    &:hover {
      background-color: var(--enter-btn-bg-hover);
    }

    &:active {
      background-color: var(--enter-btn-bg-active);
      scale: 95%;
    }

    :global(svg) {
      @include transition;
      margin-inline: auto;

      color: var(--primary);
    }
  }
</style>
