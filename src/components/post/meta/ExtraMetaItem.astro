---
import { Icon } from 'astro-icon/components'

interface Props {
  text: string
  icon: string
}
const { text, icon } = Astro.props
---

<div class="meta-item">
  <div class="icon-wrapper">
    <Icon name={icon} />
  </div>
  <div class="text">
    {text}
  </div>
</div>

<style lang="scss">
  @use '$/styles/main';
  @use '$/styles/theme' as *;
  @use '$/styles/utils' as *;
  @use '$/styles/variants';

  .meta-item {
    @include text-plain(40%);

    display: block flex;

    flex-direction: row;

    align-items: center;

    .icon-wrapper {
      @include text-plain(50%);

      display: block flex;

      align-items: center;
      justify-content: center;

      margin-inline-end: spacing(2);

      border-radius: $radius-md;

      background-color: light-dark(black(5%), white(10%));

      block-size: spacing(6);
      inline-size: spacing(6);
    }

    .text {
      @include font-size($text-sm);
    }
  }
</style>
