---
import { Icon } from 'astro-icon/components'

export interface Props {
  text: string
  label: string
  icon: string
}
const { text, label, icon } = Astro.props
---

<div class="meta-item" aria-label={label}>
  <div class="icon-wrapper" aria-hidden="true">
    <Icon name={icon} />
  </div>
  <div class="text">
    {text}
  </div>
</div>

<style lang="scss">
  @use '$/styles/classes';
  @use '$/styles/theme' as *;
  @use '$/styles/utils' as *;
  @use '$/styles/variants' as *;

  .meta-item {
    display: block flex;

    flex-direction: row;

    align-items: center;

    color: bw(40%);

    .icon-wrapper {
      display: block flex;

      align-items: center;
      justify-content: center;

      margin-inline-end: spacing(2);

      border-radius: var(--radius-md);

      background-color: var(--color-meta-extra-bg);

      block-size: spacing(6);
      inline-size: spacing(6);

      color: bw(50%);
    }

    .text {
      @include font-size($text-sm);
    }
  }
</style>
