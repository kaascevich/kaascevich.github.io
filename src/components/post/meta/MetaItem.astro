---
import { Icon } from 'astro-icon/components'

interface Props {
  icon: string
  hideOnMobile?: boolean
}

const { icon, hideOnMobile = false } = Astro.props
---

<div class:list={['meta-item', { 'mobile-hidden': hideOnMobile }]}>
  <div class="meta-icon">
    <Icon name={icon} />
  </div>
  <span class="meta-content">
    <slot />
  </span>
</div>

<style lang="scss">
  @use '$/styles/main';
  @use '$/styles/theme' as *;
  @use '$/styles/utils' as *;
  @use '$/styles/variants';

  .meta-item {
    display: block flex;

    align-items: center;

    &.mobile-hidden {
      display: none;

      @include variants.md {
        display: block flex;
      }
    }

    .meta-icon {
      display: block flex;

      align-items: center;
      justify-content: center;

      margin-inline-end: spacing(2);

      border-radius: $radius-md;

      background-color: var(--btn-regular-bg);

      block-size: spacing(8);
      inline-size: spacing(8);

      color: var(--btn-content);

      svg {
        block-size: spacing(5);
        inline-size: spacing(5);
      }
    }

    .meta-content {
      @include text-plain(50%);
      @include font-size($text-sm);

      font-weight: $font-weight-medium;
    }
  }
</style>
