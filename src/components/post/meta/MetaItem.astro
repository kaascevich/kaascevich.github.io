---
import { Icon } from 'astro-icon/components'

export interface Props {
  icon: string
  label: string
}

const { icon, label } = Astro.props
---

<div class="meta-item" aria-label={label}>
  <Icon name={icon} aria-hidden="true" />
  <span class="meta-content">
    <slot />
  </span>
</div>

<style lang="scss">
  @use '$/styles/classes';
  @use '$/styles/theme' as *;

  .meta-item {
    display: block flex;

    align-items: center;

    [data-icon] {
      display: block flex;

      align-items: center;
      justify-content: center;

      margin-inline-end: spacing(2);

      border-radius: var(--radius-md);

      background-color: var(--color-btn-regular-bg);

      padding-block: spacing(1.5);
      padding-inline: spacing(1.5);

      block-size: spacing(8);
      inline-size: spacing(8);

      color: var(--color-btn-content);
    }

    .meta-content {
      color: var(--color-meta-text);

      font-size: var(--text-sm);
      font-weight: var(--fw-medium);
    }
  }
</style>
