---
export interface Props {
  class?: string
}
const { class: className } = Astro.props
---

<article
  data-pagefind-body
  class:list={['prose prose-base dark:prose-invert', className]}
>
  <slot />
</article>

<style lang="scss">
  @use '$/styles/classes';
  @use '$/styles/theme' as *;
  @use '$/styles/variants' as *;

  article {
    max-inline-size: none !important;
  }
</style>
