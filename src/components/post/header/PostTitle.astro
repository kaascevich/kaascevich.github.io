---
import type { Post } from '$/types/content'

export interface Props {
  entry: Post
}
const { entry } = Astro.props
---

<h1 data-pagefind-body data-pagefind-weight="10" data-pagefind-meta="title">
  {entry.data.title}
</h1>

<style lang="scss">
  @use '$/styles/classes';
  @use '$/styles/theme' as *;
  @use '$/styles/transition';
  @use '$/styles/variants' as *;

  h1 {
    @extend %onload-animation;

    display: block flow;
    position: relative;

    margin-block-end: spacing(3);

    inline-size: 100%;

    color: var(--color-post-title);

    font-size: var(--text-xl4);
    font-weight: var(--fw-bold);

    @media (width < $breakpoint-md) {
      font-size: var(--text-xl3);
    }

    @media (width >= $breakpoint-md) {
      &::before {
        position: absolute;
        inset-block-start: spacing(3.25);
        inset-inline-start: spacing(-4.5);

        border-radius: var(--radius-md);

        background-color: var(--color-primary);

        block-size: spacing(5);
        inline-size: spacing(1);

        content: '';
      }
    }
  }
</style>
