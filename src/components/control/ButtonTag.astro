---
interface Props {
  href?: string
  label?: string
}
const { href, label } = Astro.props
---

<a {href} aria-label={label}>
  <slot />
</a>

<style lang="scss">
  @use '$/styles/main';
  @use '$/styles/theme' as *;
  @use '$/styles/utils' as *;
  @use '$/styles/variants';

  :any-link {
    @extend %btn-regular;
    @include font-size($text-sm);

    height: spacing(8);
    padding-right: spacing(3);
    padding-left: spacing(3);

    border-radius: $radius-lg;
  }
</style>
