---
import { Icon } from "astro-icon/components"
---

<div class="back-to-top-wrapper hidden lg:block">
  <div
    id="back-to-top-btn"
    class="back-to-top-btn hide flex items-center rounded-2xl overflow-hidden transition"
    onclick="backToTop()"
  >
    <button aria-label="Back to Top" class="btn-card h-[3.75rem] w-[3.75rem]">
      <Icon name="tabler:chevron-up" class="mx-auto" />
    </button>
  </div>
</div>

<style>
  .back-to-top-wrapper {
    @apply size-[3.75rem] absolute right-0 top-0 pointer-events-none;
  }

  .back-to-top-btn {
    @apply text-[--primary] text-4xl font-bold border-none fixed bottom-40 opacity-100 cursor-pointer translate-x-20 pointer-events-auto;
    i {
      @apply text-[1.75rem];
    }
    &.hide {
      @apply translate-x-20 scale-90 opacity-0 pointer-events-none;
    }
    &:active {
      @apply translate-x-20 scale-90;
    }
  }
</style>

<script is:inline>
  // @ts-check
  function backToTop() {
    window.scroll({ top: 0, behavior: "smooth" })
  }
</script>
