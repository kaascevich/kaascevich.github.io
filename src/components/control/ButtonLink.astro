---
type Props = Readonly<{
  badge?: string | undefined
  url?: string | undefined
  label?: string | undefined
}>

const { badge, url, label } = Astro.props
---

<a href={url} aria-label={label}>
  <button>
    <div class="flex items-center justify-between relative mr-2">
      <div
        class="overflow-hidden text-left whitespace-nowrap overflow-ellipsis"
      >
        <slot />
      </div>
      {
        badge !== undefined && (
          <div class="transition px-2 h-7 ml-4 min-w-[2rem] rounded-lg text-sm font-bold text-[--btn-content] dark:text-[--deep-text] bg-[oklch(0.95_0.025_var(--hue))] dark:bg-[--primary] flex items-center justify-center">
            {badge}
          </div>
        )
      }
    </div>
  </button>
</a>

<style lang="scss">
  button {
    @apply w-full h-10 rounded-lg bg-none hover:bg-[--btn-plain-bg-hover] active:bg-[--btn-plain-bg-active] transition-all pl-2 hover:pl-3 text-neutral-700 hover:text-[--primary] dark:text-neutral-300 dark:hover:text-[--primary];
  }
</style>
