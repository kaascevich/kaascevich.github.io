---
import type { PageLinkLayout } from '$/utils/pages'

import PageLink from './PageLink.astro'
import HiddenIcon from './HiddenIcon.astro'

export interface Props {
  pageLinks: PageLinkLayout
  current: number
}

const { pageLinks, current } = Astro.props
---

<ul>
  {
    pageLinks[0] !== null && (
      <>
        <PageLink page={pageLinks[0]} {current} />
        <HiddenIcon />
      </>
    )
  }
  {pageLinks[1].map((page) => <PageLink {page} {current} />)}
  {
    pageLinks[2] !== null && (
      <>
        <HiddenIcon />
        <PageLink page={pageLinks[2]} {current} />
      </>
    )
  }
</ul>

<style lang="scss">
  @use '$/styles/classes';
  @use '$/styles/theme' as *;

  ul {
    display: block flex;

    flex-direction: row;

    align-items: center;

    border-radius: var(--radius-lg);

    background-color: var(--color-card-bg);

    color: var(--color-pagination-link);

    font-weight: var(--fw-bold);
  }
</style>
