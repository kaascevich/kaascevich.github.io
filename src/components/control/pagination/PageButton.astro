---
import { Icon } from 'astro-icon/components'

interface Props {
  url: string | undefined
  label: string
  icon: string
}

const { url, label, icon } = Astro.props
---

<a
  href={url}
  aria-label={label}
  aria-disabled={url === undefined}
>
  <Icon name={icon} />
</a>

<style lang="scss">
  @use '$/styles/main';
  @use '$/styles/theme' as *;
  @use '$/styles/utils' as *;
  @use '$/styles/variants';

  a {
    @extend %btn-card;

    width: spacing(11);
    height: spacing(11);
    overflow: hidden;

    border-radius: $radius-lg;

    color: var(--primary);

    &:active {
      scale: 85%;
    }

    svg {
      width: spacing(7);
      height: spacing(7);
    }
  }
</style>
