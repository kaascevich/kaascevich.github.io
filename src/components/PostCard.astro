---
import path from "node:path"
import PostMetadata from "$/components/PostMeta.astro"
import ImageWrapper from "$/components/misc/ImageWrapper.astro"
import { Icon } from "astro-icon/components"
import { i18n } from "$/i18n/translation"
import I18nKey from "$/i18n/i18nKey"
import { getDir } from "$/utils/urls"
import { render, type CollectionEntry } from "astro:content"

type Props = Readonly<{
  class?: string | undefined
  entry: CollectionEntry<"posts">
  url: string
  style: string
}>

const { class: className, entry, url, style } = Astro.props

const { title, published, updated, tags, category, image, description } =
  entry.data

const coverWidth = "28%"

const { remarkPluginFrontmatter } = await render(entry)
---

<div class:list={["post-card", className]} {style}>
  <div
    class={`pl-6 md:pl-9 pr-6 md:pr-2 pt-6 md:pt-7 pb-6 relative w-full md:w-[calc(100%-${
      image === undefined ? "52px" : coverWidth
    }-12px)]`}
  >
    <a href={url} class="title">
      {title}
      <Icon size="2rem" class="title-icon" name="tabler:chevron-right" />
    </a>

    <PostMetadata
      {published}
      {updated}
      {tags}
      {category}
      hideTagsForMobile={true}
      class="mb-4"
    />

    <!-- description -->
    <div
      class:list={[
        "description",
        { "line-clamp-2 md:line-clamp-1": description === undefined },
      ]}
    >
      {description ?? remarkPluginFrontmatter.excerpt}
    </div>

    <!-- word count and read time  -->
    <div class="counts">
      <div>
        {remarkPluginFrontmatter.words}
        {
          i18n(
            remarkPluginFrontmatter.words === 1 ?
              I18nKey.wordCount
            : I18nKey.wordsCount,
          )
        }
      </div>
      |
      <div>
        {remarkPluginFrontmatter.minutes}
        {
          i18n(
            remarkPluginFrontmatter.minutes === 1 ?
              I18nKey.minuteCount
            : I18nKey.minutesCount,
          )
        }
      </div>
    </div>
  </div>

  {
    image === undefined ?
      <a
        href={url}
        aria-label={title}
        class="!hidden md:!flex btn-regular w-[3.25rem] absolute right-3 top-3 bottom-3 rounded-xl bg-[--enter-btn-bg] hover:bg-[--enter-btn-bg-hover] active:bg-[--enter-btn-bg-active] active:scale-95"
      >
        <Icon
          size="2.25rem"
          name="tabler:chevron-right"
          class="transition text-[--primary] mx-auto"
        />
      </a>
    : <a
        href={url}
        aria-label={title}
        class="group max-h-[20vh] md:max-h-none mx-4 mt-4 -mb-2 md:mb-0 md:mx-0 md:mt-0 md:w-[--coverWidth] relative md:absolute md:top-3 md:bottom-3 md:right-3 rounded-xl overflow-hidden active:scale-95"
      >
        <div class="absolute pointer-events-none z-10 w-full h-full group-hover:bg-black/30 group-active:bg-black/50 transition" />
        <div class="absolute pointer-events-none z-20 w-full h-full flex items-center justify-center ">
          <Icon
            size="3rem"
            name="tabler:chevron-right"
            class="transition opacity-0 group-hover:opacity-100 scale-50 group-hover:scale-100 text-white"
          />
        </div>
        <ImageWrapper
          src={image.source}
          basePath={path.join("content/posts/", getDir(`${entry.id}/`))}
          alt={image.alt}
          class="w-full h-full"
        />
      </a>
  }
</div>

<style lang="scss">
  @use "$/styles/main";
  @use "$/styles/theme" as *;
  @use "$/styles/utils" as *;
  @use "$/styles/variants";

  .post-card {
    @extend .card-base;
    @apply flex flex-col-reverse md:flex-col w-full rounded-2xl overflow-hidden relative;

    // post separator
    @include after {
      @apply transition border-t-[1px] border-dashed mx-6 border-black/10 dark:border-white/[0.15] first:border-t-0 md:hidden;
    }

    .title {
      @apply transition w-full block font-bold mb-3 text-3xl text-90 hover:text-[--primary] dark:hover:text-[--primary] active:text-[--title-active] dark:active:text-[--title-active] before:w-1 before:h-5 before:rounded-md before:bg-[--primary] before:absolute before:top-[35px] before:left-[18px] before:hidden md:before:block;

      .title-icon {
        @apply inline text-[--primary] translate-y-0.5 absolute;

        @include variants.md {
          @apply transition absolute translate-y-0.5 opacity-0 -translate-x-1;
        }
      }

      @include variants.md {
        &:hover .title-icon {
          @apply opacity-100 translate-x-0;
        }
      }
    }

    .description {
      @apply transition text-75 mb-3.5 pr-4;
    }

    .counts {
      @apply text-sm text-black/30 dark:text-white/30 flex gap-4 transition;
    }
  }
</style>
