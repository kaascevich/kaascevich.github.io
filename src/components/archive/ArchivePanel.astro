---
import * as R from 'remeda'
import { getSortedPosts, groupPostsByYear } from '$/utils/content'
import ArchiveGroup from '$/components/archive/ArchiveGroup.astro'

type Filter =
  | { type: 'tag'; tag: string }
  | { type: 'category'; category: string }

interface Props {
  filter?: Filter
}
const { filter } = Astro.props

const posts = R.pipe(
  await getSortedPosts(),
  R.filter(({ data }) => {
    if (filter === undefined) {
      return true
    }

    switch (filter.type) {
      case 'tag':
        return data.tags.includes(filter.tag)
      case 'category':
        return data.category === filter.category
    }
  }),
)

const groups = await groupPostsByYear(posts)
---

<ol>
  {groups.map((group) => <ArchiveGroup {group} />)}
</ol>

<style lang="scss">
  @use '$/styles/main';
  @use '$/styles/theme' as *;
  @use '$/styles/utils' as *;
  @use '$/styles/variants';

  ol {
    @extend %card-base;
    padding-block: spacing(6);
    padding-inline: spacing(8);
  }
</style>
