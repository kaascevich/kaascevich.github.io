---
import type { PostsForYear } from '$/types/content'
import ArchiveHeader from '$/components/archive/ArchiveHeader.astro'
import ArchiveItem from '$/components/archive/ArchiveItem.astro'

interface Props {
  group: PostsForYear
}
const { group } = Astro.props
---

<div>
  <ArchiveHeader {group} />
  {group.posts.map((post) => <ArchiveItem {post} />)}
</div>
