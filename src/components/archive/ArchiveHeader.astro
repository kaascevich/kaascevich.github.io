---
import strings from '$/config/strings'
import type { PostsForYear } from '$/types/content'

export interface Props {
  group: PostsForYear
}
const { group } = Astro.props
---

<header>
  <div class='year'>
    {group.year}
  </div>

  <div class='dot-wrapper'>
    <div class='dot'></div>
  </div>

  <div class='count'>
    {strings.meta.posts(group.posts.length)}
  </div>
</header>

<style lang='scss'>
  @use '$/styles/main';
  @use '$/styles/theme' as *;
  @use '$/styles/utils' as *;
  @use '$/styles/variants' as *;

  header {
    display: block grid;

    grid-template: 'year dot count' / 15% 15% 70%;

    align-items: center;

    block-size: spacing(15);
    inline-size: 100%;

    .year {
      @include font-size($text-xl);

      grid-area: year;

      text-align: end;

      color: var(--color-archive-year);

      font-weight: var(--fw-bold);

      @include md {
        @include font-size($text-xl2);
      }
    }

    .dot-wrapper {
      grid-area: dot;

      .dot {
        z-index: 50;

        margin-inline: auto;

        outline-offset: -2px;
        outline-style: solid;
        outline-color: var(--color-primary);

        border-radius: 9999px;

        background-image: none;

        block-size: spacing(3);
        inline-size: spacing(3);
      }
    }

    .count {
      grid-area: count;

      text-align: start;

      color: var(--color-archive-post-count);
    }

    @include md {
      grid-template-columns: 10% 10% 80%;
    }
  }
</style>
